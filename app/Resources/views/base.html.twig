<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Grand jeu HAPPYBREAK{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
            {% stylesheets 'bundles/happybreakjeuconcours/css/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src='https://www.google.com/recaptcha/api.js?hl=fr'></script>
    </head>
    <body style="background-image: url('{% image '@HappybreakJeuConcoursBundle/Resources/public/img/main-bg.jpg' %}{{ asset_url }}{% endimage %}')">
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            {% javascripts '@HappybreakJeuConcoursBundle/Resources/public/js/bootstrap-datepicker.core.min.js' %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            {% javascripts '@HappybreakJeuConcoursBundle/Resources/public/js/bootstrap-datepicker.fr.min.js' %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            {% javascripts '@HappybreakJeuConcoursBundle/Resources/public/js/jquery.validate.js' %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            {% javascripts '@HappybreakJeuConcoursBundle/Resources/public/js/jquery-birthday-picker.js' %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            {% javascripts '@HappybreakJeuConcoursBundle/Resources/public/js/app.js' %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
        {% include 'HappybreakJeuConcoursBundle:Default:partials/system-modals.html.twig' %}
    </body>
</html>
